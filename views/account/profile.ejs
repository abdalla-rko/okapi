<%- include('../head') -%>
<link rel="stylesheet" href="stylesheets/profile/profile.css">
<script src="https://apis.google.com/js/platform.js?onload=onLoad" async defer></script>
<script defer src="./scripts/googleButton.js"></script>
<script defer src="./scripts/profile.js"></script>
<%- include('../nav') -%>
<div class="main">
  <div class="avatar">

    <div class="profile-pic">
      <img src="uploads/profile/default-user.png" alt="profile-pic">
    </div>

    <div class="user-settings">
      <h2><%= name %></h2>
      <a href="/account/edit"><button class="editprofile-button">Edit Profile</button></a>

      <button data-modal-target="#modal" class="settings-button">
